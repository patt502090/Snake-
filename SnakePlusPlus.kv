
<Fruit>:
    canvas:
        Color:
            rgb: (1,0,0)
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeGame>:
    background: background_image
    fruit: snake_fruit
    head: snake_head

    Image:
        id: background_image
        source: 'background.png'
        size: root.size
        allow_stretch: True

    SnakeHead:
        id: snake_head
        size: root.player_size - 2,root.player_size - 2
    Fruit:
        id: snake_fruit
        size: root.player_size - 2, root.player_size - 2


<StartScreen>:
    Label:
        text: "SnakePlusPlus Game"

    Button:
        text: "Start Game"
        size_hint: 0.3,0.1
        pos: 280,200
        on_press : root.manager.current = "game"
