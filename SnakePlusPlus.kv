#:kivy 1.10.0
<Fruit>:
    canvas:
        Color:
            rgb: (1,0,0)
        Rectangle:
            pos: self.pos
            size: [50,50]

<PoisonFruit>:
    canvas:
        Color:
            rgb: (238/255, 130/255, 238/255)
        Rectangle:
            pos: self.pos
            size: [50,50]

<LuckyFruit>:
    canvas:
        Color:
            rgba: 255/255, 219/255, 88/255, 1
        Rectangle:
            pos: self.pos
            size: [50,50]
            source: "lucky_fruit.png"

<SnakeGame>:
    
    background: background_image
    fruit: snake_fruit
    head: snake_head

    Image:
        id: background_image
        source: 'background.png'
        size: root.size
        allow_stretch: True
        keep_ratio: False

    SnakeHead:
        id: snake_head
        size: root.player_size - 2,root.player_size - 2

    Fruit:
        id: snake_fruit
        size: root.player_size - 2, root.player_size - 2

    PoisonFruit: 
        id: poison_fruit
        size: root.player_size - 2, root.player_size - 2

    LuckyFruit: 
        id: lucky_fruit
        size: root.player_size - 2, root.player_size - 2

    Label:
        size: root.player_size, root.player_size
        pos: root.size[0] / 10, 9 * root.size[1] / 10
        text: str(root.score)
        


<StartScreen>:
    
    top_score_label: top_score_label
    countdown_label: countdown_label
    start_button: start_button
    file_chooser_button: file_chooser_button 
    exit_button : exit_button 
    color_button : color_button 

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'StartScreen.png'

    Button:
        id: start_button
        text: "เริ่มเกม"
        size_hint: 0.3, 0.1
        pos_hint: {'center_x': 0.5, 'top': 0.65}#pos: 310, 80
        background_normal: 'background.png'  # ภาพปุ่มเมื่อปกติ
        background_down: 'StartScreen.png'  # ภาพปุ่มเมื่อถูกกด
        color: 1, 1, 1, 1  # สีของตัวอักษร (RGBA)
        font_size: 20  # ขนาดตัวอักษร
        font_name: 'TAGameboy-Regular'  # ชื่อแบบอักษร
        border: (10,10,10,10)
        on_press :
            root.start_game_countdown() 
            root.manager.get_screen('game').play_button_click_sound()    

    Label:
        id: countdown_label  
        size_hint: None, None
        size: 100, 100 
        pos: root.width / 2 - self.width / 2, root.height / 2 - self.height / 2  
        text: "" 
        font_size: 50

    Label:
        id: top_score_label
        text: ""
        size_hint: None, None
        size: 200, 50
        pos_hint: {'center_x': 0.5, 'top': 0.1}

    Button:  # ปุ่มใหม่สำหรับเปิด filechooser
        id: file_chooser_button
        text: "เลือกรูปใส่หัวงู"
        size_hint: 0.3, 0.1
        pos_hint: {'center_x': 0.5, 'top': 0.52}#pos: 310, 200
        background_normal: 'background.png'  # ภาพปุ่มเมื่อปกติ
        background_down: 'StartScreen.png'  # ภาพปุ่มเมื่อถูกกด
        color: 1, 1, 1, 1  # สีของตัวอักษร (RGBA)
        font_size: 20  # ขนาดตัวอักษร
        font_name: 'TAGameboy-Regular'  # ชื่อแบบอักษร
        border: (10,10,10,10)
        on_press:
            root.open_filechooser()
    
    Button:
        id: color_button
        text: "เลือกสีหางงู"
        size_hint: 0.3, 0.1
        pos_hint: {'center_x': 0.5, 'top': 0.39}
        background_normal: 'background.png'  # ภาพปุ่มเมื่อปกติ
        background_down: 'StartScreen.png'  # ภาพปุ่มเมื่อถูกกด
        color: 1, 1, 1, 1  # สีของตัวอักษร (RGBA)
        font_size: 20  # ขนาดตัวอักษร
        font_name: 'TAGameboy-Regular'  # ชื่อแบบอักษร
        border: (10,10,10,10)
        on_press: root.open_color_picker()

    Button:  
        id: exit_button
        text: "ออกจากเกม"
        size_hint: 0.3, 0.1
        pos_hint: {'center_x': 0.5, 'top': 0.26}
        background_normal: 'background.png'  # ภาพปุ่มเมื่อปกติ
        background_down: 'StartScreen.png'  # ภาพปุ่มเมื่อถูกกด
        color: 1, 1, 1, 1  # สีของตัวอักษร (RGBA)
        font_size: 20  # ขนาดตัวอักษร
        font_name: 'TAGameboy-Regular'
        border: (10, 10, 10, 10)
        on_press:
            app.stop()

<SnakeHead>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            source: root.source
            size: [50,50]
            pos: self.pos

<SnakeTail>:
    canvas:
        Color:
            rgba: root.color
        Rectangle:
            pos: self.pos
            size: [50,50]