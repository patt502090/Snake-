#:kivy 1.10.0
<Fruit>:
    canvas:
        Color:
            rgb: (1,0,0)
        Rectangle:
            pos: self.pos
            size: [50,50]

<SnakeGame>:
    background: background_image
    fruit: snake_fruit
    head: snake_head

    Image:
        id: background_image
        source: 'background.png'
        size: root.size
        allow_stretch: True

    SnakeHead:
        id: snake_head
        size: root.player_size - 2,root.player_size - 2
    Fruit:
        id: snake_fruit
        size: root.player_size - 2, root.player_size - 2

    Label:
        size: root.player_size, root.player_size
        pos: root.size[0] / 10, 9 * root.size[1] / 10
        text: str(root.score)


<StartScreen>:
    countdown_label: countdown_label
    start_button: start_button
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'StartScreen.png'

    Button:
        id: start_button
        text: "Start Game"
        size_hint: 0.3, 0.1
        pos: 310, 80
        background_normal: 'background.png'  # ภาพปุ่มเมื่อปกติ
        background_down: 'StartScreen.png'  # ภาพปุ่มเมื่อถูกกด
        background_color: 0, 0.7, 0.3, 1  # สีพื้นหลังของปุ่ม (RGBA)
        color: 1, 1, 1, 1  # สีของตัวอักษร (RGBA)
        font_size: 20  # ขนาดตัวอักษร
        font_name: 'TAGameboy-Regular'  # ชื่อแบบอักษร
        border: (10,10,10,10)
        on_press :
            root.start_game_countdown() 
            root.manager.get_screen('game').play_button_click_sound()    

    Label:
        id: countdown_label  
        size_hint: None, None
        size: 100, 100 
        pos: root.width / 2 - self.width / 2, root.height / 2 - self.height / 2  
        text: "" 
        font_size: 50
      
        
<SnakeHead>:
    canvas:
        Color:
            rgb: (0,1,1)
        Rectangle:
            pos: self.pos
            size: [50,50]

<SnakeTail>:
    canvas:
        Color:
            rgba: (0,1,1,.8)
        Rectangle:
            pos: self.pos
            size: [50,50]